{
  "name": "simple-es/event-sourcing",
  "description": "A \"simple\" Event Sourcing library for PHP",
  "type": "library",
  "keywords": ["simple", "simplees", "simple-es", "event", "sourcing", "event-sourcing"],
  "homepage": "https://github.com/simple-es/event-sourcing",
  "license": "MIT",
  "authors": [
    {
      "name": "Jasper N. Brouwer",
      "email": "jasper@future500.nl"
    }
  ],

  "require": {
    "php": ">=5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.3",
    "squizlabs/php_codesniffer": "~2.1"
  },

  "autoload": {
    "psr-4": {"SimpleES\\EventSourcing\\": "src"}
  },
  "autoload-dev": {
    "psr-4": {
      "SimpleES\\EventSourcing\\Example\\": "examples",
      "SimpleES\\EventSourcing\\Test\\": "tests"
    }
  },

  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
